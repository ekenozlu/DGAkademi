<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/darkBlue">

            <ImageView
                android:id="@+id/brandLogoImageView"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_margin="15dp">

            </ImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/brandNameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:text="BRAND NAME"
                    android:textColor="@color/lightBlue"
                    android:textSize="22dp"
                    android:textStyle="bold">
                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/doorImageView"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        app:srcCompat="@drawable/door">
                    </ImageView>

                    <TextView
                        android:id="@+id/doorTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:text="0"
                        android:textColor="@color/lightBlue"
                        android:textSize="26dp">
                    </TextView>

                    <ImageView
                        android:id="@+id/engineImageView"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        app:srcCompat="@drawable/engine">
                    </ImageView>

                    <TextView
                        android:id="@+id/engineTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:text="0"
                        android:textColor="@color/lightBlue"
                        android:textSize="26dp">
                    </TextView>

                    <ImageView
                        android:id="@+id/wheelImageView"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        app:srcCompat="@drawable/wheel">
                    </ImageView>

                    <TextView
                        android:id="@+id/wheelTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:text="0"
                        android:textColor="@color/lightBlue"
                        android:textSize="26dp">
                    </TextView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>